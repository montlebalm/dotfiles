alias g="git"

# List git branches
alias branches="git for-each-ref --sort=-committerdate --count=10 --format='%(refname:short)' refs/heads/"

git-recent() {
	PS3='ðŸ”€ Select a branch: ';
	select b in `branches`;
	do
		echo "";
		git checkout $b;
		echo "";
		break;
	done
}

